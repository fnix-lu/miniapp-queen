/* pages/order/order.wxss */
.ordertabs-wrap {
  height: 84rpx;
}
.ordertabs-wrap-inner {
  height: 84rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  z-index: 10;
}
/* 暂无订单 */
.placeholder-card {
  height: 400rpx;
  background-color: #fff;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding-top: 84rpx;
}
.placeholder-card-img {
  width: 140rpx;
  height: 168rpx;
  display: block;
  margin: 0 auto 50rpx;
}
.placeholder-card-text {
  font-size: 34rpx;
  color: var(--color-subtext);
  text-align: center;
}

/* 订单卡片 */
.card-head {
  height: 64rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.order-id {
  color: #888888;
}
.order-status {
  color: var(--color-primary);
}
.content {
  padding: 26rpx 20rpx;
}
.order-countdown-wrap {
  background: rgba(246,246,246,1);
  border-radius: 4rpx;
  color: var(--color-primary);
  padding: 8rpx 24rpx;
  font-size: 22rpx;
}
.order-countdown {
  margin-top: -30rpx;
  /* position: relative;
  top: -30rpx; */
}
.order-price {
  font-size: 32rpx;
  color: var(--color-content);
}
.order-price-num {
  color: #FF8F37;
  font-size: 36rpx;
  vertical-align: middle;
}
.card-foot {
  border-top: 2rpx solid var(--color-border);
  padding: 20rpx;
}
.card-foot-text {
  color: var(--color-primary);
}
.card-foot-btns {
  flex: 1;
}
.card-foot-btns .btn {
  margin: 0 0 0 20rpx;
}

/* 拼团信息 */
.group-info {
  margin-top: 20rpx;
  margin-bottom: -8rpx;
}
.group-info-text {
  color: var(--color-subtext);
  line-height: 1;
}

/* 订单详情 */
.order-detail {
  width: 100%;
  top: 0;
  transform: translate(-50%, 0);
  padding: 0 20rpx 40rpx;
}
.order-detail-countdown {
  font-weight: bold;
  font-size: 40rpx;
  color: var(--color-primary);
  line-height: 1;
}
.order-detail-group-text {
  font-size: 36rpx;
  text-align: center;
  line-height: 1;
  margin-top: 46rpx;
}
.order-detail-group-text-num {
  font-weight: bold;
  color: var(--color-primary);
}
.order-detail .btn-primary {
  margin-top: 42rpx;
}
.order-detail-goods-title {
  color: var(--color-subtext);
  font-size: 30rpx;
  line-height: 1;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}