/* pages/forum/forum.wxss */
/* 瀑布流 */
.waterfall {
  display: flex;
  justify-content: space-between;
  padding: 0rpx 20rpx;
}
.waterfall-col {
  width: 344rpx;
}

/* 贴子卡片 */
.post-card {
  border-radius: 8rpx;
  overflow: hidden;
  margin: 20rpx 0;
  background-color: #fff;
}
.post-img {
  width: 100%;
  background-color: pink;
}
.post-info {
  padding: 20rpx 20rpx 46rpx;
}
.post-title {
  font-size: 26rpx;
  color: #353535;
}
.post-content {
  font-size: 22rpx;
  margin-top: 20rpx;
  line-height: 1.5;
  height: 3em;
  overflow: hidden;
  color: #888888;
}
.post-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.post-user {
  color: #555555;
  font-size: 22rpx;
  display: flex;
  align-items: center;
}
.user-headimg {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background-color: pink;
  margin-right: 12rpx;
  display: block;
}
.post-read {
  color: #CCCCCC;
  font-size: 22rpx;
}
.icon-eye {
  width: 30rpx;
  height: 16rpx;
  margin-right: 12rpx;
}


/* 右下角固定菜单 */
.icon-mark-menu {
  width: 152rpx;
  height: 152rpx;
}
.icon-message {
  width: 40rpx;
  height: 8rpx;
  margin-bottom: 4rpx;
}
.icon-edit {
  width: 28rpx;
  height: 26rpx;
}
.fixed-menu {
  position: fixed;
  z-index: 101;
  right: 4rpx;
  bottom: 42rpx;
}
.fixed-menu-items {
  height: 0;
  overflow: hidden;
  transition: height .2s linear;
}
.fixed-menu-items.show {
  height: 260rpx;
}
.fixed-menu-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  color: #fff;
  font-size: 22rpx;
  background-color: #FF8860;
  border-radius: 50%;
  margin: 36rpx auto 40rpx;
  position: relative;
}
.message-badge {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #fff;
  color: #FF8860;
  line-height: 28rpx;
  text-align: center;
  position: absolute;
  right: -2rpx;
  top: -12rpx;
}