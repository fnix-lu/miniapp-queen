/* pages/post-new/post-new.wxss */
.panel {
  padding: 0 20rpx;
  background-color: #fff;
  box-shadow: 0px 4px 12px 0px rgba(0,0,0,0.1);
}

.post-part {
  padding: 40rpx 0;
}
.post-title-wrap {
  border-bottom: 2rpx solid var(--color-border);
}
.post-title {
  font-size: 34rpx;
  color: var(--color-content);
}
.post-content-wrap {
  position: relative;
  padding-bottom: 0;
}
.post-content {
  background-color: #cff;
  font-size: 30rpx;
  color: var(--color-content);
  width: 100%;
  height: 420rpx;
}
.post-content-count {
  position: absolute;
  right: 0;
  top: 8rpx;
  color: #CCCCCC;
  font-size: 22rpx;
}
.post-img {
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.btn-submit {
  width: 710rpx;
  margin: 80rpx auto;
}