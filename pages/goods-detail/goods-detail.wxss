/* pages/goods-detail/goods-detail.wxss */
.container {
  padding-bottom: 98rpx;
}
.tabs {
  padding: 0 160rpx;
  /* border-bottom: 2rpx solid var(--color-border); */
}
.swiper-goods-imgs {
  height: 600rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.swiper-img {
  width: 100%;
  height: 100%;
}

/* 价格 */
.price-wrap {
  color: #fff;
}
.price-name {
  background-color: var(--color-primary);
  height: 66rpx;
  line-height: 66rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.price-content {
  height: 66rpx;
  background-color: #D86C6C;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.price-current {
  font-size: 48rpx;
  font-weight: bold;
}
.del {
  font-size: 30rpx;
  color: #DDDDDD;
  margin-left: 16rpx;
}
.list {
  padding: 0 20rpx;
  background-color: #fff;
  color: var(--color-subtext);
  font-size: 28rpx;
  line-height: 1;
  margin-bottom: 20rpx;
}
.list-item {
  border-top: 2rpx solid var(--color-border);
  padding: 28rpx 0;
  position: relative;
}
.list-item.first {
  border-top: none;
}
.goods-name {
  color: #353535;
  font-size: 34rpx;
}
.goods-desc {
  margin-top: 40rpx;
}
.selected-type {
  color: #353535;
}
.icon-arrow-right-picker {
  width: 22rpx;
  height: 38rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

/* 进行中的拼团 */
.groups-title {
  background-color: #fff;
  padding: 0 20rpx;
  line-height: 1;
  padding-top: 28rpx;
  font-size: 28rpx;
}
.leader-headimg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: pink;
  margin-right: 22rpx;
}
.group-name {
  flex: 1;
  color: #353535;
}
.group-status {
  text-align: right;
}
.btn-show-join {
  width: 138rpx;
  height: 72rpx;
  border-radius: 4rpx;
  background-color: var(--color-primary);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

/* 商品详情 */
.goods-detail {
  margin-bottom: 20rpx;
}
.goods-detail-title {
  background-color: #fff;
  padding: 0 20rpx;
  line-height: 1;
  padding-top: 28rpx;
  font-size: 28rpx;
}
.goods-detail-content {
  padding: 28rpx 20rpx;
  background-color: #fff;
}

/* 底栏 */
.fixed-footer {
  display: flex;
  align-items: center;
}
.icon-home {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}
.btn-home,
.btn-buy-self,
.btn-create-group {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 1.2;
}
.btn-home {
  flex: 1;
  border-right: 2rpx solid var(--color-border);
  border-top: 2rpx solid var(--color-border);
  color: #FF8860;
  font-size: 22rpx;
}
.btn-buy-self {
  width: 240rpx;
  border-top: 2rpx solid var(--color-border);
  color: var(--color-primary);
  font-size: 30rpx;
}
.btn-create-group {
  width: 280rpx;
  background: var(--color-primary);
  color: #fff;
  font-size: 30rpx;
}
.btn-price {
  font-size: 40rpx;
  font-weight: bold;
}

/* 购买弹层 */
.btn-confirm {
  width: 100%;
  height: 100rpx;
  background: var(--color-primary);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff;
}
.buy-options-row {
  padding: 20rpx;
  border-top: 2rpx solid var(--color-border);
}
.buy-options-row.first {
  border-top: none;
}
.buy-options-row-title {
  font-size: 28rpx;
}
.buy-img {
  width: 156rpx;
  height: 156rpx;
  background: pink;
  border: 2rpx solid var(--color-border);
  margin-right: 42rpx;
}
.buy-name {
  font-size: 28rpx;
}
.buy-selected {
  color: var(--color-subtext);
  font-size: 22rpx;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
}
.buy-price {
  color: #FF8F37;
  font-size: 36rpx;
}
.buy-price-del {
  font-size: 22rpx;
}
.radios {
  margin-top: 20rpx;
}
.radio-box {
  display: inline-block;
  padding: 14rpx 20rpx;
  background-color: #EEEEEE;
  color: #888888;
  margin-left: 40rpx;
  border-radius: 2rpx;
}
.radio-box.first {
  margin-left: 0;
}
.radio-box.checked {
  background-color: var(--color-primary);
  color: #fff;
}

/* 参与拼单弹层 */
.btn-join {
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}