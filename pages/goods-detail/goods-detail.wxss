/* pages/goods-detail/goods-detail.wxss */
.container {
  padding-bottom: 98rpx;
}
.tabs {
  padding: 0 160rpx;
  /* border-bottom: 2rpx solid var(--color-border); */
}
.swiper-goods-imgs {
  height: 600rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.swiper-img {
  width: 100%;
  height: 100%;
}

/* 价格 */
.price-wrap {
  color: #fff;
}
.price-name {
  background-color: var(--color-primary);
  height: 66rpx;
  line-height: 66rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.price-content {
  height: 66rpx;
  background-color: #D86C6C;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.price-current {
  font-size: 48rpx;
  font-weight: bold;
}
.del {
  font-size: 30rpx;
  color: #DDDDDD;
  margin-left: 16rpx;
}
.list {
  padding: 0 20rpx;
  background-color: #fff;
  color: var(--color-subtext);
  font-size: 28rpx;
  line-height: 1;
  margin-bottom: 20rpx;
}
.list-item {
  border-top: 2rpx solid var(--color-border);
  padding: 28rpx 0;
  position: relative;
}
.list-item.first {
  border-top: none;
}
.goods-name {
  color: #353535;
  font-size: 34rpx;
}
.goods-desc {
  margin-top: 40rpx;
}
.selected-type {
  color: #353535;
}
.icon-arrow-right-picker {
  width: 22rpx;
  height: 38rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

/* 进行中的拼团 */
.groups-title {
  background-color: #fff;
  padding: 0 20rpx;
  line-height: 1;
  padding-top: 28rpx;
  font-size: 28rpx;
}
.leader-headimg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: pink;
  margin-right: 22rpx;
}
.group-name {
  flex: 1;
  color: #353535;
}
.group-status {
  text-align: right;
}
.btn-join {
  width: 138rpx;
  height: 72rpx;
  border-radius: 4rpx;
  background-color: var(--color-primary);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}