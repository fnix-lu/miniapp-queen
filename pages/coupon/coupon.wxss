/* pages/coupon/coupon.wxss */
.header-wrap {
  height: 120rpx;
  background-color: red;
}
.header {
  padding: 14rpx 20rpx 34rpx;
  height: 72rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 10;
}
.header-l,
.header-r {
  flex: 1;
}
.header-r {
  display: flex;
  justify-content: flex-end;
}
.tabs {
  border: 2rpx solid var(--color-primary);
  border-radius: 8rpx;
  height: 72rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.tab {
  width: 140rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  color: var(--color-primary);
  font-size: 28rpx;
}
.tab.active {
  color: #fff;
  background-color: var(--color-primary);
}
.header-sides-item {
  height: 100%;
}
.icon-question {
  width: 36rpx;
  height: 36rpx;
}
.subtabs-wrap {
  height: 42px;
  background-color: blue;
}
.subtabs-bar {
  position: fixed;
  left: 0;
  right: 0;
  top: 120rpx;
  z-index: 10;
}
.subtabs {
  border-top: 2rpx solid #DDDDDD;
  border-bottom: 2rpx solid #DDDDDD;
}

.conpon-rules-desc {
  text-align: left;
  line-height: 40rpx;
  font-size: 24rpx;
  color: var(--color-content);
}