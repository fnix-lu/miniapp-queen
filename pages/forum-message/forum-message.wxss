/* pages/forum-message/forum-message.wxss */
.panel {
  padding: 0 20rpx 40rpx;
  background-color: #fff;
  margin: 20rpx 0;
}
.panel-head {
  height: 70rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.msg-status {
  color: var(--color-primary);
}
.type-post {
  display: flex;
}
.post-summary {
  flex: 1;
}
.post-img {
  width: 140rpx;
  height: 140rpx;
  background-color: #fff;
  margin-right: 20rpx;
}
.post-title {
  font-size: 26rpx;
}
.post-content {
  font-size: 22rpx;
  margin-top: 30rpx;
  line-height: 32rpx;
  height: 64rpx;
  overflow: hidden;
  color: #888888;
}




.user {
  display: flex;
  align-items: center;
  padding-top: 18rpx;
  padding-bottom: 40rpx;
}
.user-headimg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #fff;
}
.user-nickname {
  font-size: 26rpx;
  color: var(--color-content);
  margin-bottom: 6rpx;
}
.user-info {
  flex: 1;
}
.created-time {
  color: var(--color-subtext);
  font-size: 22rpx;
}
.reply-from {
  color: #888888;
  font-size: 22rpx;
}
.reply-content-wrap {
  background-color: #F2F2F2;
  padding: 20rpx;
  color: #555555;
  font-size: 26rpx;
}