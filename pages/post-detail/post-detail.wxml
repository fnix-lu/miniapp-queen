        <!-- 已有的回复 -->
        <view class="replies">
          <view class="reply-item first"><text class="reply-user">小仙女儿</text>：赞同赞同赞同赞同赞同赞同赞同赞同赞同赞同</view>
          <view class="reply-item"><text class="reply-user">大仙女儿</text>：我也赞同赞同</view>
        </view>
      </view>
    </view>
    <!-- end 一条评论 -->

    <view class="comment-item">
      <view class="user">
        <image class="user-headimg"></image>
        <view>
          <view class="user-nickname">小仙女儿</view>
          <view class="created-time">03-29</view>
        </view>
      </view>
      <view class="comment-content-wrap">
        <!-- 评论内容 -->
