          <view class="reply-item first"><text class="reply-user">小仙女儿</text>：赞同赞同赞同赞同赞同赞同赞同赞同赞同赞同</view>
          <view class="reply-item"><text class="reply-user">大仙女儿</text>：我也赞同赞同</view>
        </view>
      </view>
    </view>

  </view>

  <!-- 底部回复栏 -->
  <view class="fixed-footer">
    <view><input class="input-reply" placeholder="回复楼主的评论"></input></view>
    <view><button class="btn btn-primary btn-reply" size="mini" disabled="{{ false }}">回复</button></view>
  </view>
</container>

