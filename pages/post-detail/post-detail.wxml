      <view class="user">
        <image class="user-headimg"></image>
        <view>
          <view class="user-nickname">小仙女儿</view>
          <view class="created-time">03-29</view>
        </view>
      </view>
      <view class="comment-content-wrap">
        <!-- 评论内容 -->
