/* pages/category/category.wxss */
page {
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header {
  padding: 20rpx;
  border-bottom: 2rpx solid var(--color-border);
}
.discount-info {
  padding: 10rpx;
  background: #FFE6A1;
  color: #9C6500;
  font-size: 26rpx;
  text-align: center;
}
.menu {
  flex: 1;
  background: #fcf;
  display: flex;
}
.category-l,
.category-r {
  height: 100%;
}
.category-l {
  background-color: #F4F4F4;
  width: 154rpx;
}
.category-r {
  background-color: #FFFFFF;
  flex: 1;
}

.list-name,
.list-content {
  padding-bottom: 200rpx;
}
.name-item {
  padding: 30rpx;
  font-size: 28rpx;
}
.name-item.active {
  background: #FFFFFF;
}
.list-content {
  padding-top: 20rpx;
}

/* 菜单商品项 */
.content-item {
  height: 180rpx;
  padding: 0 20rpx 0 26rpx;
  margin-bottom: 20rpx;
  display: flex;
}
.content-item-img {
  width: 180rpx;
  height: 180rpx;
  box-sizing: border-box;
  border: 2rpx solid var(--color-border);
  background-color: pink;
  margin-right: 26rpx;
}
.content-item-info {
  flex: 1;
}
.content-item-name {
  font-size: 30rpx;
  line-height: 1.5;
  height: 1.5em;
  overflow: hidden;
}
.content-item-desc {
  color: var(--color-subtext);
  font-size: 22rpx;
  line-height: 1.5;
  height: 3em;
  overflow: hidden;
}
.content-item-foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 22rpx;
}
.price-current {
  font-size: 36rpx;
  color: #FF8F37;
}
.price-del {
  color: #CCCCCC;
  font-size: 22rpx;
  margin-left: 12rpx;
}

/* 购物车底部固定结算 */
.cart-calc {
  display: flex;
  z-index: 102;
}
.cart-total-info {
  flex: 1;
  padding-left: 148rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-top: 2rpx solid var(--color-border);
}
.cart-price-total {
  color: #FF8F37;
  font-size: 40rpx;
}
.cart-price-desc {
  color: #CCCCCC;
  font-size: 26rpx;
  padding-left: 12rpx;
  border-left: 2rpx solid var(--color-border);
  margin-left: 12rpx;
}
.btn-submit-order {
  width: 240rpx;
  background-color: var(--color-primary);
  color: #fff;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 购物车黄字提示 */
.cart-tip {
  position: fixed;
  width: 100%;
  bottom: 100rpx;
  background-color: #FFE6A1;
  color: #9C6500;
  text-align: center;
  padding: 14rpx 0;
  z-index: 102;
}

/* 购物车弹层 */
.cart {
  position: fixed;
  width: 100%;
  bottom: 100rpx;
  padding-bottom: 60rpx;
  z-index: 101;
  border-radius: 16px 16px 0px 0px;
  background-color: #fff;
  transform: translateY(200%);
  /* transition: transform .3s linear; */
}
.cart.show {
  transform: translateY(0)
}
/* 复选框 */
.checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--color-primary);
  border-color: var(--color-primary);
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
  font-size: 28rpx;
}
/* 购物车图标 */
.cart-icon-wrap {
  left: 12rpx;
}
.cart-icon-wrap.out {
  position: fixed;
  bottom: 14rpx;
  z-index: 103;
}
.cart-icon-wrap.out.hidden {
  display: none;
}
.cart-icon-wrap.in {
  top: -140rpx;
  position: absolute;
}
.icon-cart {
  width: 116rpx;
  height: 116rpx;
  display: block;
}
.cart-badge {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #fff;
  color: var(--color-primary);
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 4rpx;
  top: -4rpx;
}
/* 购物车三角箭头 */
.icon-card-triangle {
  width: 28rpx;
  height: 28rpx;
  border-top-left-radius: 4rpx;
  transform: rotate(45deg);
  background-color: #fff;
  position: absolute;
  top: -14rpx;
  left: 56rpx;
}
/* 购物车头部 */
.cart-head {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #888888;
}
.select-all {
  display: flex;
  align-items: center;
}
.select-all-checkbox-wrap {
  width: 72rpx;
}
/* 购物车商品项 */
.cart-goods-item {
  display: flex;
  padding: 0 20rpx;
  align-items: center;
}
.cart-goods-item-l {
  width: 72rpx;
}
.cart-goods-item-r {
  flex: 1;
  border-top: 2rpx solid #F8F8F8;
  display: flex;
  padding: 20rpx 0;
}
.cart-goods-item-r.first {
  border-top: none;
}
.cart-goods-img {
  width: 120rpx;
  height: 120rpx;
  box-sizing: border-box;
  border: 2rpx solid var(--color-border);
  background-color: pink;
  margin-right: 20rpx;
}
.cart-goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-goods-name {
  font-size: 28rpx;
  line-height: 1.5;
}
.cart-goods-foot {
  display: flex;
  justify-content: space-between;
}
.cart-goods-price-current {
  color: #FF8F37;
  font-size: 36rpx;
}
.cart-goods-price-del {
  color: #CCCCCC;
  font-size: 22rpx;
  margin-left: 12rpx;
}