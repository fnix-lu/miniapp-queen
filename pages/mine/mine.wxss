/* pages/mine/mine.wxss */
/* 头部 */
.header {
  height: 390rpx;
  background-color: #fff;
  position: relative;
}
.header-bg {
  width: 100%;
  height: 260rpx;
}
.header-info {
  width: 694rpx;
  height: 240rpx;
  border-radius: 16rpx;
  background-color: #fff;
  text-align: center;
  position: absolute;
  top: 130rpx;
  left: 0;
  right: 0;
  margin: auto;
  box-shadow: 0px 4px 12px 0px rgba(50, 0, 0, 0.1);
}
.my-headimg {
  width: 140rpx;
  height: 140rpx;
  background-color: #e6e6e6;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-top: -74rpx;
}
.my-nickname {
  margin-top: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}
.to-edit-info {
  color: #888;
  font-size: 22rpx;
  width: 180rpx;
  height: 48rpx;
  line-height: 44rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 24rpx;
  margin: 20rpx auto 0;
}

/* 菜单 */
.menu-icon {
  width: 36rpx;
  height: 36rpx;
  display: block;
}

/* 授权登录按钮 */
.btn-auth {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .2);
}
.btn-auth::after {
  border: none;
}