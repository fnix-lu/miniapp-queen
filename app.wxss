/**app.wxss**/
page {
  background-color: #F4F4F4;
  /* 变量 */
  --color-primary: #FC7B7B;
  --color-content: #555555;
  --color-subtext: #888888;
  --color-border: #EEEEEE;
}
.container {
  font-size: 24rpx;
  color: #353535;
}
.del {
  text-decoration: line-through;
  color: #999999;
}

/* 对齐 */
.left {
  text-align: left;
}
.center {
  text-align: center;
}
.right {
  text-align: right;
}
.middle {
  vertical-align: middle;
}

/* flex对齐 */
.inline-flex {
  display: inline-flex;
}
.flex {
  display: flex;
}
.flex-left {
  justify-content: flex-start;
}
.flex-center {
  justify-content: center;
}
.flex-right {
  justify-content: flex-end;
}
.flex-sides {
  justify-content: space-between;
}
.flex-around {
  justify-content: space-around;
}
.flex-top {
  align-items: flex-start;
}
.flex-middle {
  align-items: center;
}
.flex-bottom {
  align-items: flex-end;
}
.flex-cross {
  flex-direction: column;
}

/* 弹层 */
.cover {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.3);
  z-index: 100;
}
.dialog {
  position: fixed;
  z-index: 101;
  background: #fff;
  min-width: 560rpx;
  min-height: 360rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
}

/* 卡片容器 */
.card {
  width: 710rpx;
  margin: 20rpx auto;
  background-color: #fff;
  box-shadow: 0px 4px 12px 0px rgba(50, 0, 0, 0.1);
  border-radius: 16rpx;
  min-height: 100rpx;
  overflow: hidden;
}

/* 按钮 */
.btn {
  background-color: #fff;
  color: var(--color-subtext);
  font-size: 28rpx;
}
.btn::after {
  border-color: #999999;
}
.btn.btn-full {
  border-radius: 16rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
}
.btn.btn-primary {
  background-color: var(--color-primary);
  color: #fff;
}
.btn.btn-primary::after {
  border-color: var(--color-primary);
}
